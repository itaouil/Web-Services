extends layout

block content

    main

        br
        br
        
        section#weatherSec
            div#weatherDiv.container
                br
                h1#location.uppercase
                div.row
                    div#primaryWeatherDiv.col-6
                        span#icon
                        h2#mainWeather.uppercase
                        h2
                            span#temp.uppercase
                            span#c.selected &deg;C 

                    br

                    div#secondaryWeatherDiv.col-6
                        p
                            span#day.divider
                            span#time
                            br
                            span#descWeather.uppercase
                            br
                            br
                            span#wind
                            br
                            span#humidity
        
        br
        br

        section#inputSec
            div#inputDiv.container
                br
                input#userInput(type="text" placeholder="Enter city")
                button#goButton GO !
                br
                br

    //- JavaScript files (JQuery + Client Routines)
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    script(src="/javascripts/main.js")